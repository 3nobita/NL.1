<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Property</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 600px;
    }
    h1 {
      margin-bottom: 20px;
      font-size: 24px;
      color: #333;
    }
    .form-group {
      margin-bottom: 15px;
    }
    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }
    input, textarea, select {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
    button:hover {
      background-color: #0056b3;
    }
    .back-link {
      display: block;
      margin-top: 20px;
      text-align: center;
      color: #007bff;
      text-decoration: none;
    }
    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Edit Property</h1>
    <form action="/admin/update/<%= property._id %>" method="POST">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= property.name %>" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea name="description" id="description" rows="4" required><%= property.description %></textarea>
      </div>
      <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="<%= property.price %>" required>
      </div>
      <div class="form-group">
        <label for="categories">Select Categories:</label>
        <select name="categories" id="categories" multiple>
          <option value="Spotlight" <%= property.categories.includes('Spotlight') ? 'selected' : '' %>>Spotlight</option>
          <option value="Featured Developers" <%= property.categories.includes('Featured Developers') ? 'selected' : '' %>>Featured Developers</option>
          <option value="Trending Residences" <%= property.categories.includes('Trending Residences') ? 'selected' : '' %>>Trending Residences</option>
          <option value="SIGNATURE Developments" <%= property.categories.includes('SIGNATURE Developments') ? 'selected' : '' %>>SIGNATURE Developments</option>
          <option value="Popular Zones" <%= property.categories.includes('Popular Zones') ? 'selected' : '' %>>Popular Zones</option>
        </select>
      </div>
      <div class="form-group">
        <label for="imageUrl">Image URL:</label>
        <input type="text" id="imageUrl" name="imageUrl" value="<%= property.imageUrl %>">
      </div>
      <button type="submit">Update Property</button>
    </form>
    <a href="/admin" class="back-link">Back to Dashboard</a>
  </div>
</body>
</html>
